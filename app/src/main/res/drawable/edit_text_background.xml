<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the EditText -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Border for the EditText -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light gray border -->

    <!-- Rounded corners for the EditText -->
    <corners android:radius="8dp" /> <!-- 8dp corner radius -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding inside the EditText -->

</shape>
